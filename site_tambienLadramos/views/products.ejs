<!DOCTYPE html>
<html lang="en" class="body_productos">

    <%- include('./partials/head') %>
    
<body class="body_productos">

    <%- include('./partials/header') %>
    
<main>
    
    <section class="productos"> 
        <h1>Productos</h1>
            <div class="product-mas-relevante">
                <p>Más relevante</p>   
            </div>

        <nav class="products-productos">
            
            <% product.forEach(({id, title, price, weight, images}) => { %> 
                <article>
                    <a href="/products/productDetail/<%= id %>">
                        <% images.forEach(({name}) => { %>
                            <div>
                                <div style="position: relative; display: flex; justify-content: center;">
                                    <span style="color: black; text-align: center; width: 4vw; display: flex; flex-direction: column; justify-content: center; border: 0.2vw solid grey; border-radius: 100vh; background:var(--colores4);"><strong><%= weight %> kg</strong></span>
                                </div>
                               
                                <img src="/images/Alimento-balanceado/<%= name %>" alt="">     
                            </div>
                        <% }) %>
                        <p><strong>$<%= price %></strong></p>
                        <p id="title-product"><%= title %></p>    
                    </a>                 
                        <form class="form-product-cart" action="" method="get">
                            <i id="btn-add-card" onclick="addCart('<%=id%>')" class="fa-solid fa-cart-plus" >Agregar</i>
                        </form>
                  
                </article> 
           <% }) %>

        </nav>

    </section>
