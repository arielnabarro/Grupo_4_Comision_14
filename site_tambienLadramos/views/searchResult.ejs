<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head'); %>
<body>
    
<%- include('partials/header'); %> 

<main>
    
    <section class="searchResult"> 
        <h1>Resultado de la búsqueda: "<%= noSpaceKeyword %>"</h1>
        <div class="searchResult-mas-relevante">
            <p>Más relevante</p>   
        </div>
        
        <nav class="searchResult-productos">
            <% if (result.length > 0) { %>
            <% result.forEach(({id, title, price, weight, images}) => { %>
                <article>
                    <span class="searchResult-weight">
                        <strong><%= weight %> kg</strong>
                    </span>
                    <a href="/products/productDetail/<%= id %>">

                        <% images.forEach(({name}) => { %>
                            <div>
                                <img src="/images/Alimento-balanceado/<%= name %>" alt="">     
                            </div>
                        <% }) %>
                        
                        <p><strong>$<%= price %></strong></p>
                        <p id="title-product"><%= title %></p>
                    </a>
                    <form class="form-product-cart" action="" method="get">
                        <i id="btn-add-card" onclick="addCart('<%=id%>')" class="fa-solid fa-cart-plus" >Agregar</i>
                    </form>

                </article> 
            <% }) %>
            <% }else{ %>
                <div>
                    No se encontraron resultados
                </div>
            <% } %>
        </nav>
    </section>
    
</main>


<%- include('partials/footer'); %> 

</body>
</html>