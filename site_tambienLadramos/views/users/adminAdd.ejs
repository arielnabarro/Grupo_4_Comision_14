<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/head',{
        title : 'Admin Add'
    })  %> 


<body class="home-body">

    <%- include('../partials/header') %>

<main>
    
    <section class="section-profile-prod-users">
        <h2 class="profile-title">Agregar administrador</h2>
        <div style="display: flex; flex-direction: row; justify-content: space-around;">
            <a href="/users/profile">
                <i class="fa-solid fa-circle-left"> Volver al perfil</i>
            </a> 
            <a  href="/products/productAdd">
                <i class="fa-solid fa-circle-plus"> Agregar productos</i>
            </a> 
            <a href="/users/list">
                <i class="fa-solid fa-circle-right"> Editar usuarios</i>
            </a> 
        </div>     
        <% if (locals.userLogin && locals.userLogin.id) { %>
        <div class="profileEdit__form">
            <form method="POST" action="">
                <article>
                    <div>
                        <label for="name">Nombre: </label>
                        <input type="text" id="name" name="name" required value="<%= locals.old && old.name ? old.name : null %>">
                        <span class="form-errors"><%= locals.errors && errors.name ? errors.name.msg: null %></span>
                    </div>
                    <div>
                        <label for="last_name">Apellido: </label>
                        <input type="text" id="last_name" name="last_name" required value="<%= locals.old && old.last_name ? old.last_name : null %>">
                        <span class="form-errors"><%= locals.errors && errors.last_name ? errors.last_name.msg: null %></span>
                    </div>
                    <div>
                        <label for="email">Email: </label>
                        <input type="text" id="email" name="email" required value="<%= locals.old && old.email ? old.email : null %>">
                        <span class="form-errors"><%= locals.errors && errors.email ? errors.email.msg: null %></span>
                    </div>
                    <div>
                        <label for="password">Contraseña: </label>
                        <input type="password" id="password" required name="password">
                        <span class="form-errors"><%= locals.errors && errors.password ? errors.password.msg: null %></span>
                    </div>
                    <div>
                        <label for="password2">Repita su contraseña: </label>
                        <input type="password" id="password2" required name="password2">
                        <span class="form-errors"><%= locals.errors && errors.password2 ? errors.password2.msg: null %></span>
                    </div>
                    <!--  -->
                                
                    <article class="profileEdit__form__bottons ">
                        <div><button type="reset">Limpiar</button></div>
                        <div><button type="submit">Guardar</button></div>
                    </article>
                </article>    
            </form>
        </div>
        <% } %>
    </section>

</main>
    <%- include('../partials/footer') %>

</body>
</html>
