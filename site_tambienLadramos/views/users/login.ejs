<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/head', {
        title : 'Login'
    }) %>

<body class="home-body">

    <%- include('../partials/header') %>

    <main class="login-main"> 
        <nav>
                <h2>Acceder</h2>
                <form class="login-form" action="/users/login" method="POST">
                <ul>   
                    <li>
                        <div>
                            <input class="login_user" type="email" id="email" name="email" placeholder="Email" value="<%= locals.old && old.email ? old.email : null %>">
                            <span class="form-errors" id="span-error"><%= locals.errors && errors.email ? errors.email.msg : null %></span>
                            <small class="front-errors" id="small__login-email"></small>
                        </div>
                        <div>
                            <input class="login_user" type="password" id="password" name="password" placeholder="Contrase単a">
                            <small class="front-errors" id="small__login-password"></small>
                            <div>
                                <span class="form-errors"><%= locals.errors && errors.password ? errors.password.msg : null %></span>
                            </div>
                            
                        </div>
                    <div>
                        <small class="front-errors-global"></small>
                        <div>
                            <input type="checkbox" name="recordarme" id="recordarme">
                            <label for="recordame">Recordarme</label>
                        </div>
                        
                            <a id="boton" href="">
                                <input class="login_bottons" type="submit" value="Acceder">
                            </a>  
                    </div>
                        <div>
                            <a class="login-olvi" href="">多Olvidaste tu contrase単a?</a>
                        </div>
                        <div>
                            <a class="login-olvi" href="register">多Quieres registrarte?</a>
                        </div>                        
                    </li>
                </ul>
            </form>
        </nav>
    </main>   
    
    <%- include('../partials/footer') %>
<script src="/javascript/validations/login.js"></script>
</body>
</html>